<?xml version="1.0" encoding="UTF-8"?><!-- deployment descriptor - request mapping is done through this file -->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>DemoSpring</display-name>
 <servlet>
        <servlet-name>demo</servlet-name> <!-- the xml file should be named as demo-servlet.xml -->
       <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/</url-pattern>  <!-- the "/" is for all the request -->
       
</servlet-mapping> 
  
</web-app>
<!-- the DispatcherServlet will try to access the file named "servlet-name-servlet.xml" -->